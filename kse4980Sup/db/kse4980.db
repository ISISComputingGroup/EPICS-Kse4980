# Work out the units of the two measurements given the current function 
record(aSub, "$(P)_UNIT_WORKEROUTER")
{
    field(INPA, "$(P)FUNC")
    field(FTA, "STRING")

    field(OUTA, "$(P)PRIMARY.EGU PP")
    field(FTVA, "STRING")

    field(OUTB, "$(P)SECONDARY.EGU PP")
    field(FTVB, "STRING")


    field(SNAM, "work_out_units") #todo write this
}

